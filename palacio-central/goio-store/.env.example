###############################################
# Goio Store – Plantilla .env (submódulo / front?)
# Ajustar según funcionalidades reales.
###############################################

PORT=3100
LOG_LEVEL=info

# --- Shopify ---
SHOPIFY_STORE_DOMAIN=<REEMPLAZAR_SHOPIFY_STORE_DOMAIN>
SHOPIFY_ADMIN_TOKEN=<REEMPLAZAR_SHOPIFY_ADMIN_TOKEN>
SHOPIFY_API_VERSION=2024-07

# --- Contenido / IA ---
GEMINI_API_KEY=<REEMPLAZAR_GEMINI_API_KEY>
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3:8b

# --- Cloudflare ---
CLOUDFLARE_API_TOKEN=<REEMPLAZAR_CF_API_TOKEN>
CLOUDFLARE_ZONE_ID=<REEMPLAZAR_CF_ZONE_ID>

# --- Seguridad / Webhooks ---
HMAC_SECRET=<REEMPLAZAR_HMAC_SECRET>
API_TOKEN=<REEMPLAZAR_API_TOKEN>
METRICS_TOKEN=<REEMPLAZAR_METRICS_TOKEN>

# --- Flags ---
DRY_RUN=false

# --- Notas ---
# 1. Si comparte network docker con 'palacio-central', usar OLLAMA_HOST=http://ollama:11434
# 2. Para builds CI usar tokens ficticios.
APP_NAME=goio-store
PORT=3002
NODE_ENV=production
