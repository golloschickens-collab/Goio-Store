# =============================================
# CONFIGURACIÓN DE CREDENCIALES REALES
# =============================================

# Archivo: .env
# Copiar estas variables y completar con sus datos reales:

# PAYPAL (para Goio-Store y Eco-Eterno)
PAYPAL_CLIENT_ID=sb_tu_client_id_aqui
PAYPAL_CLIENT_SECRET=tu_secret_aqui
PAYPAL_MODE=sandbox  # Cambiar a 'live' en producción

# SHOPIFY (para Goio-Store)
SHOPIFY_STORE_NAME=tu-tienda
SHOPIFY_API_KEY=tu_api_key_aqui
SHOPIFY_API_SECRET=tu_secret_aqui

# YOUTUBE (para Eco-Eterno)
YOUTUBE_API_KEY=tu_youtube_api_key
YOUTUBE_CHANNEL_ID=tu_channel_id

# BANCO BCP (para Gollos Chickens)
BCP_API_KEY=tu_bcp_api_key
BCP_ACCOUNT_ID=tu_cuenta_corriente

# YAPE/PLIN (números para notificaciones)
YAPE_NUMERO=939431887
PLIN_NUMERO=939431887

# WHATSAPP BUSINESS (tokens reales)
WHATSAPP_ACCESS_TOKEN=tu_token_real
WHATSAPP_PHONE_NUMBER_ID=tu_phone_id
WHATSAPP_VERIFY_TOKEN=tu_verify_token

# BASE DE DATOS (para guardar transacciones reales)
DATABASE_URL=postgresql://user:pass@localhost:5432/imperio_real