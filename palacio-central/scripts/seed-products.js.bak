// Crea 3 productos piloto (o los que encuentre en ./data/seed.json)
// Usa helper _shopify.js para API base y headers

import { readFileSync, existsSync } from 'fs';
import fetch from 'node-fetch';
import { api, headersJSON } from './_shopify.js';

// 1) Cargar datos de semilla
function loadSeed() {
  const path = './data/seed.json';
  if (existsSync(path)) {
    try {
      const raw = readFileSync(path, 'utf8');
      const json = JSON.parse(raw);
      if (Array.isArray(json) && json.length) return json;
    } catch (_) {}
  }
  // Fallback: 3 productos demo
  const now = Date.now();
  return [
    {
      title: `Goioâ„¢ Pack A ${now}`,
      body_html: "&lt;strong&gt;Pack ahorro&lt;/strong&gt; para iniciar.",
      vendor: "Goioâ„¢",
      product_type: "Bundle",
      tags: "oferta,lanzamiento",
      variants: [{ price: "39.90", sku: `GOIO-A-${now}`, inventory_quantity: 20 }],
      images: []
    },
    {
      title: `Goioâ„¢ Pack B ${now}`,
      body_html: "Calidad al mejor precio.",
      vendor: "Goioâ„¢",
      product_type: "Bundle",
      tags: "top,mejor-precio",
      variants: [{ price: "49.90", sku: `GOIO-B-${now}`, inventory_quantity: 20 }],
      images: []
    },
    {
      title: `Goioâ„¢ Pack C ${now}`,
      body_html: "EdiciÃ³n de lanzamiento 48h.",
      vendor: "Goioâ„¢",
      product_type: "Bundle",
      tags: "lanzamiento,48h",
      variants: [{ price: "59.90", sku: `GOIO-C-${now}`, inventory_quantity: 20 }],
      images: []
    }
  ];
}

// 2) Crear producto en Shopify
async function createProduct(p) {
  const body = { product: p };
  const res = await fetch(api('products.json'), {
    method: 'POST',
    headers: headersJSON,
    body: JSON.stringify(body)
  });
  const txt = await res.text();
  if (!res.ok) {
    console.error('âŒ Seed product error', res.status, txt.slice(0, 400));
    return null;
  }
  try {
    const j = JSON.parse(txt);
    return j.product;
  } catch {
    console.error('âŒ JSON parse error:', txt.slice(0, 200));
    return null;
  }
}

// 3) Main
(async () => {
  const items = loadSeed();
  console.log(`â–¶ï¸ Sembrando ${items.length} productosâ€¦`);

  const created = [];
  for (const p of items) {
    const prod = await createProduct(p);
    if (prod) {
      const v = prod.variants?.[0];
      created.push({
        id: prod.id,
        title: prod.title,
        price: v?.price,
        variant_id: v?.id,
        handle: prod.handle
      });
      console.log(`âœ… ${prod.title} | precio S/ ${v?.price} | variant_id=${v?.id}`);
    }
    // evita rate limit
    await new Promise(r => setTimeout(r, 400));
  }

  console.log('\nðŸ“¦ Productos creados:');
  for (const c of created) {
    console.log(`â€¢ ${c.title} | S/ ${c.price} | variant_id=${c.variant_id} | /products/${c.handle}`);
  }
})();